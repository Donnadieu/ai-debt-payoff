# AI Debt Payoff Planner - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./debt_payoff.db
# For PostgreSQL production:
# DATABASE_URL=postgresql://username:password@localhost:5432/debt_payoff_db

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Information
API_TITLE="AI Debt Payoff Planner API"
API_VERSION="1.0.0"
API_DESCRIPTION="API for managing debt payoff strategies with AI coaching"

# Environment settings
ENVIRONMENT=development
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:5173"]

# =============================================================================
# REDIS CONFIGURATION (Required for background workers)
# =============================================================================

# Redis URL for job queue and caching
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# AI/LLM INTEGRATION
# =============================================================================

# LLM API Configuration (required for nudges and coaching)
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_BASE_URL=https://api.openai.com/v1
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# Alternative AI providers (uncomment to use)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Enable analytics and performance monitoring
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_RETENTION_DAYS=90

# Performance monitoring thresholds
PERFORMANCE_SLOW_THRESHOLD=1000
PERFORMANCE_ERROR_THRESHOLD=5000

# =============================================================================
# BACKGROUND WORKERS
# =============================================================================

# Worker configuration
WORKER_CONCURRENCY=2
WORKER_TIMEOUT=300
QUEUE_DEFAULT_TIMEOUT=600

# Job retry configuration
JOB_MAX_RETRIES=3
JOB_RETRY_DELAY=60

# =============================================================================
# SECURITY (Production)
# =============================================================================

# JWT Configuration (when authentication is implemented)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@debtpayoff.com

# Webhook URLs (for external integrations)
WEBHOOK_URL=https://your-webhook-url.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# LOGGING
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/debt_payoff.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test database (for running tests)
TEST_DATABASE_URL=sqlite:///./test_debt_payoff.db

# Development flags
RELOAD=true
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# For production deployment, override these:
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/debt_payoff_prod
# REDIS_URL=redis://prod_redis_host:6379/0
# SECRET_KEY=your-production-secret-key
# CORS_ORIGINS=["https://yourproductiondomain.com"]